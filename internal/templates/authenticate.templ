package templates

templ AuthResponseMessage(msg string) {
	<div id="response-message" class="text-center text-red-500 text-sm mt-2">
        { msg }
    </div>
}

templ Login() {
	<div class="min-h-screen flex items-center justify-center p-4" style="background-image: url('/static/images/WukongWallpaper.jpg'); background-size: cover;">
		<div class="w-full max-w-md" x-data="{ showLogin: true }">
			<div
				x-show="showLogin"
				class="bg-black/70 backdrop-blur-sm rounded-2xl p-8 shadow-2xl border-2 border-yellow-600"
			>
				<div class="text-center mb-8">
                    <h1 class="text-6xl font-bold text-yellow-600 uppercase macaco-title">
                        Prove yourself
                    </h1>
				</div>
				<form
					hx-post="/auth/login"
					hx-trigger="submit"
					hx-target="#response-message"
					hx-swap="innerHTML"
					class="space-y-4"
				>
					<div>
						<label class="block text-yellow-300 text-sm mb-2 font-medium" for="login-email">Email</label>
						<input
							type="email"
							id="login-email"
							name="email"
							required
							class="w-full px-4 py-3 bg-gray-900 border-2 border-yellow-700 rounded-lg text-yellow-100 placeholder-gray-500 focus:outline-none focus:border-yellow-500 focus:ring-2 focus:ring-yellow-500 focus:ring-opacity-50 transition duration-200"
							placeholder="your@email.com"
						/>
					</div>
					<div x-data="{ showPassword: false }">
						<label class="block text-yellow-300 text-sm mb-2 font-medium" for="login-password">Password</label>
						<div class="relative">
							<input
								:type="showPassword ? 'text' : 'password'"
								id="login-password"
								name="password"
								required
								class="w-full px-4 py-3 bg-gray-900 border-2 border-yellow-700 rounded-lg text-yellow-100 placeholder-gray-500 focus:outline-none focus:border-yellow-500 focus:ring-2 focus:ring-yellow-500 focus:ring-opacity-50 transition duration-200"
								placeholder="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢"
							/>
							<button
								type="button"
								@click="showPassword = !showPassword"
								class="absolute right-3 top-1/2 transform -translate-y-1/2 text-yellow-500 hover:text-yellow-400 text-sm"
							>
								<span x-show="!showPassword">ğŸ‘ï¸</span>
								<span x-show="showPassword">ğŸ™ˆ</span>
							</button>
						</div>
					</div>
					<div class="flex items-center justify-between text-sm">
						<label class="flex items-center text-yellow-300 cursor-pointer">
							<input type="checkbox" name="remember" class="mr-2 rounded border-yellow-600 text-yellow-600 focus:ring-yellow-500"/>
							<span>Remember me</span>
						</label>
					</div>
					<button type="submit" class="w-full bg-gradient-to-r from-yellow-600 to-yellow-500 text-black font-bold py-3 rounded-lg shadow-lg hover:shadow-yellow-500/50 hover:from-yellow-500 hover:to-yellow-400 transform hover:scale-105 transition duration-300">
						LOG IN
					</button>
                    @AuthResponseMessage("")
				</form>
				<div class="mt-6 text-center">
					<p class="text-gray-400 text-sm">
						New here? 
						<button @click="showLogin = false" class="text-yellow-500 hover:text-yellow-400 font-semibold transition duration-200">Create Account</button>
					</p>
				</div>
			</div>
			<!-- Register Form -->
			<div
				x-show="!showLogin"
				class="bg-black/70 backdrop-blur-sm rounded-2xl p-8 shadow-2xl border-2 border-red-600"
			>
				<div class="text-center mb-8">
                    <h1 class="text-4xl font-bold text-red-600 uppercase macaco-title">
                        Become Legend
                    </h1>
				</div>
				<form
					hx-post="/auth/register"
					hx-trigger="submit"
					hx-target="#register-response"
					hx-swap="innerHTML"
					x-data="{ password: '', confirmPassword: ''}"
					class="space-y-4"
				>
					<div>
						<label class="block text-red-300 text-sm mb-2 font-medium" for="register-name">Name</label>
						<input
							type="text"
							id="register-name"
							name="name"
							required
							class="w-full px-4 py-3 bg-gray-900 border-2 border-red-700 rounded-lg text-red-100 placeholder-gray-500 focus:outline-none focus:border-red-500 focus:ring-2 focus:ring-red-500 focus:ring-opacity-50 transition duration-200"
							placeholder="Sun Wukong"
						/>
					</div>
					<div>
						<label class="block text-red-300 text-sm mb-2 font-medium" for="register-email">Email</label>
						<input
							type="email"
							id="register-email"
							name="email"
							required
							class="w-full px-4 py-3 bg-gray-900 border-2 border-red-700 rounded-lg text-red-100 placeholder-gray-500 focus:outline-none focus:border-red-500 focus:ring-2 focus:ring-red-500 focus:ring-opacity-50 transition duration-200"
							placeholder="your@email.com"
						/>
					</div>
					<div x-data="{ showPassword: false }">
						<label class="block text-red-300 text-sm mb-2 font-medium" for="register-password">Password</label>
						<div class="relative">
							<input
								:type="showPassword ? 'text' : 'password'"
								id="register-password"
								name="password"
								x-model="password"
								required
								class="w-full px-4 py-3 bg-gray-900 border-2 border-red-700 rounded-lg text-red-100 placeholder-gray-500 focus:outline-none focus:border-red-500 focus:ring-2 focus:ring-red-500 focus:ring-opacity-50 transition duration-200"
								placeholder="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢"
							/>
							<button
								type="button"
								@click="showPassword = !showPassword"
								class="absolute right-3 top-1/2 transform -translate-y-1/2 text-red-500 hover:text-red-400 text-sm"
							>
								<span x-show="!showPassword">ğŸ‘ï¸</span>
								<span x-show="showPassword">ğŸ™ˆ</span>
							</button>
						</div>
					</div>
					<div x-data="{ showConfirm: false }">
						<label class="block text-red-300 text-sm mb-2 font-medium" for="register-confirm">Confirm Password</label>
						<div class="relative">
							<input
								:type="showConfirm ? 'text' : 'password'"
								id="register-confirm"
								name="confirm_password"
								x-model="confirmPassword"
								required
								class="w-full px-4 py-3 bg-gray-900 border-2 border-red-700 rounded-lg text-red-100 placeholder-gray-500 focus:outline-none focus:border-red-500 focus:ring-2 focus:ring-red-500 focus:ring-opacity-50 transition duration-200"
								placeholder="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢"
							/>
							<button
								type="button"
								@click="showConfirm = !showConfirm"
								class="absolute right-3 top-1/2 transform -translate-y-1/2 text-red-500 hover:text-red-400 text-sm"
							>
								<span x-show="!showConfirm">ğŸ‘ï¸</span>
								<span x-show="showConfirm">ğŸ™ˆ</span>
							</button>
						</div>
						<p x-show="confirmPassword && password !== confirmPassword" class="text-yellow-400 text-xs mt-1">
							âš ï¸ Passwords do not match
						</p>
					</div>
					<button
						type="submit"
						:disabled="password !== confirmPassword"
						:class="password !== confirmPassword ? 'opacity-50 cursor-not-allowed' : 'hover:shadow-red-500/50 hover:from-red-500 hover:to-red-400 transform hover:scale-105'"
						class="w-full bg-gradient-to-r from-red-600 to-red-500 text-white font-bold py-3 rounded-lg shadow-lg transition duration-300"
					>
						REGISTER
					</button>
                    @AuthResponseMessage("")
				</form>
				<div class="mt-6 text-center">
					<p class="text-gray-400 text-sm">
						Already have an account? 
						<button @click="showLogin = true" class="text-red-500 hover:text-red-400 font-semibold transition duration-200">Return to login</button>
					</p>
				</div>
			</div>
		</div>
	</div>
}
